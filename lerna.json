{
  "npmClient": "yarn",
  "useWorkspaces": false,
  "version": "1.0.1",
  "packages": [
    "packages/core",
    "packages/core-redux",
    "packages/core-vuex",
    "packages/route",
    "packages/route-browser",
    "packages/route-mp",
    "packages/app",
    "packages/react-components",
    "packages/react-redux",
    "packages/react-web",
    "packages/react-redux-web",
    "packages/vue-components",
    "packages/vue-web",
    "packages/vue-vuex",
    "packages/vue-vuex-web"
  ],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish %s"
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/test/**", "**/*.md"]
}
