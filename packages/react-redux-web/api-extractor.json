/**
 * Config file for API Extractor.  For more info, please visit: https://api-extractor.com
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  "mainEntryPointFilePath": "types/index.d.ts",

  "bundledPackages": [
    "@elux/core",
    "@elux/core-redux",
    "@elux/route",
    "@elux/route-browser",
    "@elux/app",
    "@elux/react-components",
    "@elux/react-redux",
    "@elux/react-web"
  ],

  "compiler": {
    "tsconfigFilePath": "src/tsconfig.json"
  },

  "apiReport": {
    "enabled": false
  },

  "docModel": {
    "enabled": true
  },

  "dtsRollup": {
    "enabled": false
  },

  "tsdocMetadata": {},

  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },

    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "ae-missing-release-tag": {
        "logLevel": "none"
      },
      "ae-forgotten-export": {
        "logLevel": "none"
      }
    },

    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    }
  }
}
